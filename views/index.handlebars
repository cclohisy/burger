<div class="jumbotron jumbotron-fluid text-center">
    <h1 class="display-4">BURGER BINGE</h1>
    <p class="lead">What burger are you in the mood for? </p>

</div>
{{!--
<img src="https://media.giphy.com/media/l0EtM8MnNvB5O6C1q/giphy.gif" class="img-fluid" alt="Burger Gif"> put a burger image here "https://media.giphy.com/media/4eBH2WQPLULLi/giphy.gif" burger input form --}}
<form class="mx-auto text-center" id="addBurger">
    <h2>Don't see anything you like? Add a burger! </h2>

    <div class="form-group">
        <label>Burger Choice:</label>
        <input type="text" id="newBurger" name="burger">
    </div>
    <button class="btn" type="submit">Add Burger</button>
</form>


{{!-- 2 cards for results? --}}
<div class="row">
    <div class="card m-2">
        <div class="card-body">
            <h2 class="card-title">Time to Devour...</h2>
            {{#each burgers}}{{#unless devoured}}
            <p class="card-text">{{id}}. {{burger_name}}
                <button class=" btn btn-dark eat" id="{{id}}" data-devoured="{{devoured}}">
                    EAT ME </button>
            </p>
            {{/unless}} {{/each}}
        </div>
    </div>

    <div class="card m-2">
        <div class="card-body">
            <h2 class="card-title">You at all these already!</h2>
            {{#each burgers}} {{#if devoured}}
            <p class="card-text">
                {{id}}. {{burger_name}}
            </p>
            {{/if}} {{/each}}

        </div>
    </div>
</div>